<UserControl
    x:Class="wpf_utils.LabeledControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_utils"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" SharedSizeGroup="label" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            x:Name="RowLabel"
            Grid.Column="0"
            Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LabeledControl}}, Path=Label}"
            Target="{Binding ElementName=RowControl}" />

        <ContentPresenter
            x:Name="RowControl"
            Grid.Column="1"
            Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LabeledControl}}, Path=Control}" />
    </Grid>
</UserControl>
